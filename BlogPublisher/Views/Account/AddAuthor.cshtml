
@{
    ViewData["Title"] = "AddAuthor";
}
@model WebApplication1.ViewModel.AuthorViewModel
<div class="content-container mt-2 mb-2" style="background-image: url('@Url.Content("~/img/regist s.jpg")'); background-size: cover; background-position: center; background-attachment: scroll; padding: 50px;">
    <div class="container">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h1>Add New Author</h1>
                </div>
                <div class="card-body">
                    <form asp-action="AddAuthor">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="Gender" class="control-label"></label>
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="Salary" class="control-label"></label>
                            <input asp-for="Salary" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="BirthDate" class="control-label"></label>
                            <input asp-for="BirthDate" class="form-control" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4 mb-4">
                            <button type="submit" value="AddAuthor" class="btn btn-dark w-100">Create</button>
                            <!-- Changed button color to light -->
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}