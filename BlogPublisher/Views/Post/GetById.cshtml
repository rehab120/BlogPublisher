@using WebApplication1.Models.Entites

@model Post

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <!-- Full page height -->
    <div class="col-md-4 mb-4 d-flex justify-content-center">
        <div class="card h-100" style="width: 100%; background-color: #f8f9fa;">
            <!-- Light gray background -->
            <img class="card-img-top" src="~/img/@Model.Image" alt="Card">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@Model.Type</h5>
                <p class="card-text">@Model.Descripation</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    Author :@Model.Author.Name
                </li>
                <li class="list-group-item">@Model.CreateTime</li>
            </ul>
            @if (@User.IsInRole("Admin") || @User.IsInRole("Author"))
            {
                <div class="card-footer mt-auto">
                    <a href="/Post/Edit/@Model.Id" class="btn btn-link" style="color: rgba(47, 6, 150, 0.8);">Edit</a>
                </div>
            }
        </div>
    </div>
</div>

