@using WebApplication1.Models.Entites

@model Author

@{
    SelectList listItems = new SelectList(ViewBag.Department, "Id", "Name");
    SelectList listItem2 = new SelectList(ViewBag.Post, "Id", "Type");
}
<h1 style="color: rgba(47, 6, 150, 0.8);">Edit Author Data</h1>
<form class="m-3" method="post" asp-controller="Author" asp-action="Edit" ,asp-route-id="@Model.Id">
    <div class="form-group mb-3">
        <label asp-for="Name">Author Name</label>
        <input asp-for="Name" class="form-control" style="color: rgba(47, 6, 150, 0.8);">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group mb-3">
        <label asp-for="EmailAddress">Author EmailAddress</label>
        <input asp-for="EmailAddress" class="form-control" style="color: rgba(47, 6, 150, 0.8);">
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="BirthDate">Author BirthDate</label>
        <input asp-for="BirthDate" class="form-control" style="color: rgba(47, 6, 150, 0.8);">
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Gender">Author Gender</label>
        <input asp-for="Gender" class="form-control" style="color: rgba(47, 6, 150, 0.8);">
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Salary">Author Salary</label>
        <input asp-for="Salary" class="form-control" style="color: rgba(47, 6, 150, 0.8);">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Address">Author Address</label>
        <input asp-for="Address" class="form-control" style="color: rgba(47, 6, 150, 0.8);">
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="form-group mb-3">
        <label asp-for="Dep_id">Author Dep_id</label>
        @* <input asp-for="Dep_id" class="form-control"> *@
        <select asp-for="Dep_id" asp-items="listItems" class="form-select" style="color: rgba(47, 6, 150, 0.8);">
        </select>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" value="Edit" class="btn btn-primary mt-3" style="background-color: rgba(47, 6, 150, 0.8);">Submit</button>
    </div>

</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
